<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Income Sources</h1>
    <%= link_to "Add Income", new_income_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200">
      <% @incomes.each do |income| %>
        <li>
          <div class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <p class="text-lg font-medium text-indigo-600"><%= income.description %></p>
                <div class="mt-2 sm:flex sm:justify-between">
                  <div class="sm:flex">
                    <p class="flex items-center text-sm text-gray-500">
                      Amount: <%= number_to_currency(income.amount) %>
                    </p>
                    <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                      Frequency: <%= Income::FREQUENCIES[income.frequency] %>
                    </p>
                    <% if income.frequency == 'specific_date' %>
                      <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                        Day: <%= income.frequency_day %>
                      </p>
                    <% elsif income.frequency == 'biweekly' %>
                      <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                        Start: <%= income.start_date.strftime('%B %d, %Y') %>
                      </p>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="ml-5 flex-shrink-0 flex space-x-2">
                <%= link_to "Edit", edit_income_path(income), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                <%= button_to "Delete", income_path(income), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900 text-sm" %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
