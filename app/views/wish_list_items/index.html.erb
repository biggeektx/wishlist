<div class="space-y-6" data-controller="purchase-modal">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Wish List Items</h1>
    <%= link_to "Add Item", new_wish_list_item_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200">
      <% @wish_list_items.each do |item| %>
        <li>
          <div class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <p class="text-lg font-medium text-indigo-600"><%= item.name %></p>
                <div class="mt-2 sm:flex sm:justify-between">
                  <div class="sm:flex">
                    <p class="flex items-center text-sm text-gray-500">
                      Cost: <%= number_to_currency(item.cost) %>
                    </p>
                    <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                      Type: <span class="ml-1 px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= item.item_type == 'target_date' ? 'bg-red-100 text-red-800' : item.item_type == 'sequential' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
                        <%= item.item_type.humanize %>
                      </span>
                    </p>
                    <% if item.item_type == 'target_date' && item.target_date %>
                      <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                        Target: <%= item.target_date.strftime('%B %d, %Y') %>
                      </p>
                    <% elsif item.item_type == 'sequential' %>
                      <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                        Order: #<%= item.sequential_order %>
                      </p>
                    <% elsif item.item_type == 'percentage' %>
                      <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                        Priority: <%= item.percentage %>%
                      </p>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="ml-5 flex-shrink-0 flex space-x-2">
                <% unless item.purchased? %>
                  <button data-action="click->purchase-modal#open"
                          data-purchase-modal-item-id-param="<%= item.id %>"
                          data-purchase-modal-item-name-param="<%= item.name %>"
                          data-purchase-modal-item-cost-param="<%= item.cost %>"
                          class="text-green-600 hover:text-green-900 text-sm">
                    Mark Purchased
                  </button>
                <% else %>
                  <span class="text-green-600 text-sm font-medium">âœ“ Purchased</span>
                <% end %>
                <%= link_to "Edit", edit_wish_list_item_path(item), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                <%= button_to "Delete", wish_list_item_path(item), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900 text-sm" %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Purchase Modal -->
  <div data-purchase-modal-target="modal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Mark as Purchased</h3>
      <p class="text-sm text-gray-600 mb-4">
        Item: <span data-purchase-modal-target="itemName" class="font-semibold"></span>
      </p>

      <%= form_with url: "#", method: :post, data: { action: "submit->purchase-modal#submit" } do |form| %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Actual Cost Paid
          </label>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= form.number_field :amount,
                  step: 0.01,
                  data: { purchase_modal_target: "amountInput" },
                  class: "pl-7 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                  placeholder: "0.00" %>
          </div>
        </div>

        <div class="flex gap-3">
          <button type="submit" class="flex-1 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md text-sm font-medium">
            Confirm Purchase
          </button>
          <button type="button" data-action="click->purchase-modal#close" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-md text-sm font-medium">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
